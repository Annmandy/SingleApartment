@model sln_SingleApartment.Models.CImageGallery

@{
    ViewBag.Title = "BackImageGalleryforRoomStyle";
    Layout = "~/Views/Shared/HomePage/_LayoutHomeMember.cshtml";
}

<body>


    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.mousewheel.js"></script>
    <script src="~/Content/Room/js/jquery.fancybox.js?v=2.1.3"></script>
    <link href="~/Content/Room/css/jquery.fancybox.css?v=2.1.2" rel="stylesheet" media="screen" />
    <link href="~/Content/Room/css/jquery.fancybox.css" rel="stylesheet" />


    <h2>BackImageGalleryforRoomStyle</h2>

    <style type="text/css">
        .imgBox {
            width: 200px;
            height: 200px;
            opacity: 1.0;
            filter: alpha(opacity=100);
        }

            .imgBox:hover {
                -moz-box-shadow: 0 0 10px #ccc;
                -webkit-box-shadow: 0 0 10px #ccc;
                box-shadow: 0 0 10px #ccc;
                opacity: 0.4;
                filter: alpha(opacity=40);
            }
    </style>
    <div class="jumbotron" style="height:600px;">
        <p>
            <a class="imageGallery btn btn-primary" data-fancybox-type="iframe"
               href="@Url.Action("UploadImage", "Home")">Upload New Image</a>
        </p>
        <div style="border-bottom:1px solid Red;"></div>
        @if (Model.ImageList.Count > 0)
        {
            <div class="row-fluid">
                <div class="span2">
                    <div class="item">
                        @foreach (var image in Model.ImageList)
                        {
                            <div style=" margin:10px; float:left; height:200px;
                   overflow:hidden; width:200px;">
                                <a id="ShowImage" class="fancybox-button"
                                   data-rel="fancybox-button"
                                   title="Photo" href="@Url.Content("~/Content/Room/images/roomstyle/"+ image)">
                                    <div class="zoom">
                                        <img src="@Url.Content("~/Content/Room/images/roomstyle/" + image)"
                                             class="imgBox" />
                                        <div class="zoom-icon"></div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.imageGallery').fancybox({
                fitToView: false,
                width: '600px',
                height: '400px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
                'afterClose': function () {
                    window.location.reload();
                },
                These lines of code use to reload index after upload image and close
                      Fancy box.
            });

            $("#ShowImage").fancybox({
                helpers:
                {
                    title:
                    {
                        type: 'float'
                    }
                }
            });
        });
    </script>


</body>