                                    <form method="post">
                                        <div class="section-title mb-30">
                                            <h2 id="roomstylename">
                                                @Html.DisplayFor(modelItem => item.roomname)


                                                <input id="roomstyleId" type="hidden" value="@item.roomstyleID" name="roomstyleid" />
                                                <input id="buildcaseId" type="hidden" value="@item.buildcaseID" name="buildcaseid" />
                                                <input id="Rent" type="hidden" value="@item.rent" name="rent" />
                                                <input id="roomtype" type="hidden" value="@item.roomtype" name="peoplecount" />

                                            </h2>                                         

                                            @{

                                                var usedroom = Model.leaseViewModels.Where(x => x.roomID == item.roomID);

                                                if (usedroom != null)
                                                {
                                                    var roomPesonCount = 0;
                                                    if (item.roomtype.Equals("1人房"))
                                                    {
                                                        roomPesonCount = 1;
                                                    }
                                                    else if (item.roomtype.Equals("2人房"))
                                                    {
                                                        roomPesonCount = 2;
                                                    }
                                                    else if (item.roomtype.Equals("3人房"))
                                                    {
                                                        roomPesonCount = 3;
                                                    }
                                                    else if (item.roomtype.Equals("4人房"))
                                                    {
                                                        roomPesonCount = 4;
                                                    }

                                                    if (usedroom.Count() < roomPesonCount)
                                                    {
                                                        <a href="~/Room/BookingInfo/@item.roomID">
                                                            <input class="submit-form" type="button" id="book" value="前往訂房" style="width:100px; float:right;" />
                                                        </a>
                                                        <input class="submit-form" type="button" id="book" value="目前有空缺" style="width:120px; float:right; overflow:visible;  margin-right:20px;" />
                                                    }
                                                    else
                                                    {
                                                        <a href="~/Room/BookingInfo/@item.roomID">
                                                            <input class="submit-form" type="button" id="book" value="前往訂房" style="width:100px; float:right;" disabled />
                                                        </a>
                                                        <input class="submit-form" type="button" id="book" value="目前已滿房" style="width:120px; float:right; overflow:visible;  margin-right:20px;" />
                                                    }
                                                }
                                                else
                                                {
                                                    <a href="~/Room/BookingInfo/@item.roomID">
                                                        <input class="submit-form" type="button" id="book" value="前往訂房" style="width:100px; float:right;" />
                                                    </a>
                                                    <input class="submit-form" type="button" id="book" value="目前有空缺" style="width:120px; float:right; overflow:visible;  margin-right:20px;" />
                                                }

                                            }


                                            <p>房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。房型簡介。</p>
