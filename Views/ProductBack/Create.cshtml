@model  sln_SingleApartment.ViewModels.CProductViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/HomePage/_LayoutHomeMember.cshtml";
}

<style>
    p{
        font-size:20px;
    }
</style>

@using (Html.BeginForm("Create", "ProductBack", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="margin-left:15em;margin-right:20px;padding:10px">
    <h2 style="font-size:50px ; color:chocolate ; margin-top:20px;margin-left:5em;font-weight:700">活動團購商品</h2>
    <h3 style="font-size:25px ; color:chocolate ;;margin-left:10em;font-weight:500"><strong>新增商品</strong></h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
    <div class="form-group">
       
        <p class="control-label col-md-4">商品類別</p>
        <div class="col-md-4" style="width:48em;">
            @Html.DropDownList("SUBNAME", null, "", htmlAttributes: new { @class = "control-label col-md-10" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-4">產品名稱</p>
        <div class="col-md-4">
            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", @id = "PRODUCTNAME" } })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-4">產品單價</p>
        <div class="col-md-4">
            @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control", @id = "PRODUCTPRICE" } })
            @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-4">團購數量(數量上限為活動人數)</p>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-4">產品敘述</p>
        <div class="col-md-4">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "PRODUCTDESCRIPTION" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-4">您的活動編號</p>
        <div class="col-md-4">
            @Html.EditorFor(model => model.ActivityID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.ActivityID, "", new { @class = "text-danger" })
        </div>
    </div>

    @*//上傳照片*@
    @*//============================================*@
    <div class="form-group" >
        <p class="control-label col-md-4">照片</p>
        <input style="width:39em;" type="file" name="imgPhoto" />
    </div>
    @*//=============================================*@

    <div class="form-group" style="margin-left:40em;margin-bottom:10em">

            <input style="width:19em" type="submit" value="Create" class="btn btn-default" />
            <input style="width:19em" type="button" onclick="DEMO()" value="新增DEMO" class="btn btn-default" />
        
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Home")
</div>


<script>
    function DEMO() {
        $("#PRODUCTNAME").val("馬桶通樂");
        $("#PRODUCTPRICE").val("80");
        $("#PRODUCTDESCRIPTION").val("讓你家裡馬桶不在卡卡");
    }
    
</script>