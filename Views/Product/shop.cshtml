<!-- #region 顯示產品的功能Ajax-->
<script>
    $(function () {
        SearchProduct();
        $('#allpd').click(function () { SearchProduct() });

        $('.myMainCate').click(function () {
            SearchProductsByMainC($(this).prop("name"));
        });
        $('.mySubCate').click(function () {
            SearchProductsBySubC($(this).prop("name"));
        });

    });

    @* 條件搜索 *@
    function SearchProduct() {
        pagesize = $("#pageSize").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductTabPane")",
            data: {
                MemberID: @ViewBag.MemberID,
                pageSize : pagesize
            },
            success: function (data) {
                $("#home").html(data);
            }
        });
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductProfile")",
            data: {
                MemberID: @ViewBag.MemberID,
                pageSize: pagesize
            },
            success: function (data) {
                $("#zone_product_detail").html(data);
            }
        });
    }

    function SearchProductsByMainC(id) {
        pagesize = $("#pageSize").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductTabPane")",
            data: {
                MemberID: @ViewBag.MemberID,
                MainCategory: id,
                pageSize: pagesize
            },
            success: function (data) {
                $("#home").html(data);
            }
        });
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductProfile")",
            data: {
                MemberID: @ViewBag.MemberID,
                MainCategory: id,
                pageSize: pagesize
            },
            success: function (data) {
                $("#zone_product_detail").html(data);
            }
        });
    }
    function SearchProductsBySubC(id) {
        let pagesize = $("#pageSize").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductTabPane")",
            data: {
                MemberID: @ViewBag.MemberID,
                SubCategory: id,
                pageSize: pagesize
            },
            success: function (data) {
                $("#home").html(data);
            }
        });
        $.ajax({
            type: "POST",
            url: "@Url.Action("PartialProductProfile")",
            data: {
                MemberID: @ViewBag.MemberID,
                SubCategory: id,
                pageSize: pagesize
            },
            success: function (data) {
                $("#zone_product_detail").html(data);
            }
        });
    }
    @* 一頁幾筆搜尋 *@
    function SearchProductForNumbers() {
        SearchProduct();
    }
    @* 加到最愛 *@
    function AddToFavoriteList(MemberID) {

        var pdID = $(event.currentTarget).prop("name");
        $.ajax({
                    url: '@Url.Action("AddToFavorite", "Product")',
                    dataType: 'json',
                    data: JSON.stringify({
                        MemberID: MemberID,
                        ProductID: pdID
                        }),
                    contentType: 'application/json',
                    type: 'POST',
                    success: function (data)
                    {
                        window.alert(JSON.parse(data).ans);
                    }
        })
    }
    @*加到購物車*@
    function AddToCart() {
        var pdID = $(event.currentTarget).prop("name");
        $.ajax({
            url: '@Url.Action("AddToCart", "Product")',
            dataType: 'html',
            data: {
                ProductID: pdID,
            },
            type: 'POST',
            success: function (data) {
                window.alert("已加入購物車！");
                $(".drop-cart").html(data);
            }
        })
    }

</script>

